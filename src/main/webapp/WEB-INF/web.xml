    </servlet>
    <servlet>
        <servlet-name>ServletQR</servlet-name>
        <servlet-class>com.CopyQuick.Controller.ServletQR</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletRegistro</servlet-name>
        <url-pattern>/ServletRegistro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
