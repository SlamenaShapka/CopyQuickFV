        <servlet-name>ServletArchivoEscogido</servlet-name>
        <url-pattern>/ServletArchivoEscogido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletSaldo</servlet-name>
        <url-pattern>/ServletSaldo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRegistroQR</servlet-name>
